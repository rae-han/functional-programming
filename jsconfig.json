{
	"compilerOptions": {
		"checkJs": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ESNext",
		"noImplicitAny": false,
		"allowJs": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
