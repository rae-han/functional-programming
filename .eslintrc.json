{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "indent": ["error", 2],
    "newline-per-chained-call": [
      "error",
      { "ignoreChainWithDepth": 0 }
    ],
    "no-console": "off",
    "prettier/prettier": "error"
  }
}
